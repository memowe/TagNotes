% layout 'default';
% title 'Notes';
<div class="container">
    <div class="row">
    % for my $note (@$notes) {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                %= link_to note => {uuid => $note->uuid} => (class => 'caption') => begin
                    <p><strong><%= $note->get_name =%></strong></p>
                    <p><%= $note->get_body_text =%></p>
                % end
            </div>
        </div>
    % }
    </div>
</div>
