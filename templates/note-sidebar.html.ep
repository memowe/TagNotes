<ul class="nav nav-sidebar">
% for my $note (@$notes) {
    % my $class = $uuid eq $note->uuid ? 'active' : '';
    <li id="note_<%= $note->uuid %>" class="<%= $class %>">
        %= link_to 'note' => {uuid => $note->uuid} => begin
            <span class="glyphicon glyphicon-file"></span>
            <strong><%= $note->get_name %></strong>
        % end
    </li>
% }
</ul>
